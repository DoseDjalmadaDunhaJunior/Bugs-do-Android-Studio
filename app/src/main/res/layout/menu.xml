<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="551dp"

        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/branco"
                android:layout_width="107dp"
                android:layout_height="85dp"
                android:src="@drawable/download"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="405dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="cadastrarOnCLick"
                android:src="@drawable/add2"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="198dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Adicionar senha" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/btnList"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="listarSenhasOnCLick"
                android:src="@drawable/list2"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="171dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Listar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/btnConfig"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="configOnClick"
                android:src="@drawable/config2"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="288dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Configurações" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/btnSair"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="voltaOnClick"
                android:src="@drawable/sair2"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="405dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Sair" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <at.markushi.ui.CircleButton
                android:id="@+id/branco"
                android:layout_width="107dp"
                android:layout_height="85dp"
                android:src="@drawable/download"
                app:cb_color="#ffff4444"
                app:cb_pressedRingWidth="8dip"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="405dp" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>